@section Scripts
    {
    <script type="text/javascript" src="~/js/urlConstants.js"></script>
    <script type="text/javascript">
        const token = "Bearer " + localStorage.getItem("Authorization");
        const baseUrl = "https://localhost:7153";
        const statisticsUrl = `${baseUrl}/statistics`;
        const tasksUrl = `${baseUrl}/tasks`;

        function LoadDeductions(data) {
            const deductionTable = $("#deductionTable");
            deductionTable.empty();

            $.each(data.worstPerformingEmployees, function (_, employee) {
                deductionTable.append(`
                                                                      <tr>
                                                                        <td>${employee.employeeName}</td>
                                                                        <td>${employee.deductionAmount}</td>
                                                                        <td>${employee.deductionCount}</td>
                                                                      </tr>`);
            });
        }

        function LoadBonuses(data) {
            const bonusTableBody = $("#bonusTableBody");
            bonusTableBody.empty();

            $.each(data.bestPerformingEmployees, function (index, employee) {
                bonusTableBody.append(`
                                                                      <tr>
                                                                        <td>${employee.employeeName}</td>
                                                                        <td>${employee.bonusAmount}</td>
                                                                        <td>${employee.bonusesCount}</td>
                                                                      </tr>`);
            });
        }

        function LoadBirthdaysThisMonth(data) {
            const employeeBirthdays = $("#employeeBirthdays");
            employeeBirthdays.empty();

            $.each(data.employeeBirthdays, function (_, employee) {
                employeeBirthdays.append(`
                                                                      <tr>
                                                                        <td>${employee.employeeName}</td>
                                                                        <td>${employee.birthDate}</td>
                                                                        <td>${employee.age} -> ${employee.age + 1}</td>
                                                                      </tr>`);
            });
        }

        function LoadUpcomingTasks(data) {
            const upcomingTasks = $("#upcomingTasks");
            upcomingTasks.empty();

            $.each(data.upcomingTasks, function (_, employee) {
                console.log(employee)
                upcomingTasks.append(`
                                                                      <tr>
                                                                        <td>${employee.taskName}</td>
                                                                        <td>${employee.description}</td>
                                                                        <td>${employee.employeeName}</td>
                                                                        <td>${employee.issuerName}</td>
                                                                        <td>${employee.dueDate.split('T')[0]}</td>
                                                                        <td>${employee.status.statusName}</td>
                                                                        <td>${employee.priority.priorityName}</td>
                                                                        <td>${employee.id ? `<a href="#" class="checkmark-link" data-id="${employee.id}"><i class="fa-solid fa-check" style="color: green;"></i></a>` : ''}</td>
                                                                                                      </tr>`);
            });
        }

        function CompleteTask() {
            $(document).on('click', '.checkmark-link', function (e) {
                e.preventDefault();

                const id = $(this).data('id');
                console.log(id);

                $.ajax({
                    url: tasksUrl + "/complete",
                    type: "Put",
                    headers: { "Authorization": token },
                    data: JSON.stringify(id),
                    contentType: 'application/json',
                    success: function (data) {
                        toastr.success(data);
                        $(this).closest('tr').remove();
                        LoadData();
                    },
                    error: function (error) {
                        toastr.error(error.responseText);
                    }
                });
            })
                    };

        function ChangeTaskIssuedByMePages(page) {
            $("#tasksIssuedByMe > tbody").html("");
            $.ajax({
                url: `${tasksUrl}/issuedByMe/${page}`,
                type: "Get",
                headers: { "Authorization": token },
                success: function (data) {
                    LoadTasksIssuedByMe(data);
                }
            });
        }

        function LoadTasksIssuedByMe(tasks) {
            console.log("Clearing content of #tasksByMe");
            $("#tasksByMe").empty();

            $.each(tasks.tasks, function (_, task) {
                const rowHtml = `
                                                            <tr>
                                                                <td>
                                                                    <a class="text-heading font-semibold" href="#">
                                                                        ${task.employeeName}
                                                                    </a>
                                                                </td>
                                                                         <td>
                                                                            <a class="text-heading font-semibold" href="#">
                                                                                ${task.issuerName}
                                                                            </a>
                                                                        </td>
                                                                <td>
                                                                    ${task.dueDate.split('T')[0]}
                                                                </td>
                                                                <td>
                                                                    <a class="text-heading font-semibold" href="#">
                                                                        ${task.taskName}
                                                                    </a>
                                                                </td>
                                                                <td>
                                                                            ${task.priority.priorityName}
                                                                </td>
                                                                <td>
                                                                                ${task.status.statusName}
                                                                </td>
                                                            </tr>
                                                        `;
                $("#taskByMe").append(rowHtml);
            });


            let spanText = $("#taskPagesText");
            spanText.val(`Showing ${tasks.tasks.length} tasks out of ${tasks.tasks * tasks.totalPages}`)
            LoadTasksIssuedByMePagination(tasks.page, tasks.totalPages);
        }

        function LoadTasksIssuedByMePagination(currentPage, totalPages) {
            const paginationElement = $('#tasksPages');
            console.log(paginationElement);
            paginationElement.empty();

            // PREVIOUS
            if (currentPage > 1) {
                paginationElement.append(`<li class="page-item"><a class="page-link" href="#" data-page="${currentPage - 1}">Previous</a></li>`);
            } else {
                paginationElement.append(`<li class="page-item disabled"><a class="page-link" href="#" tabindex="-1">Previous</a></li>`);
            }

            // Numbers
            for (let i = 1; i <= totalPages; i++) {
                if (i === currentPage) {
                    paginationElement.append(`<li class="page-item active"><a class="page-link" href="#" data-page="${i}">${i}</a></li>`);
                } else {
                    paginationElement.append(`<li class="page-item"><a class="page-link" href="#" data-page="${i}">${i}</a></li>`);
                }
            }

            // NEXT
            if (currentPage < totalPages) {
                paginationElement.append(`<li class="page-item"><a class="page-link" href="#" data-page="${currentPage + 1}">Next</a></li>`);
            } else {
                paginationElement.append(`<li class="page-item disabled"><a class="page-link" href="#" tabindex="-1">Next</a></li>`);
            }

            paginationElement.find('a.page-link').click(function (e) {
                e.preventDefault();
                const clickedPage = $(this).data('page');
                ChangeTaskIssuedByMePages(clickedPage);
            });
        }

        function LoadData() {
            const departmentNum = $("#departmentNumbers");
            const employeeNum = $("#employeeNumbers");
            const newEmployeeNum = $("#newEmployees");

            $.ajax({
                url: statisticsUrl + "/home",
                type: "Get",
                headers: { "Authorization": token },
                contentType: 'application/json',
                success: function (data) {
                    console.log(data);

                    departmentNum.text(data.numberOfDepartments);
                    employeeNum.text(data.numberOfEmployees);
                    newEmployeeNum.text(data.numberOfNewEmployeesThisMonth);

                    LoadDeductions(data);
                    LoadBonuses(data);
                    LoadBirthdaysThisMonth(data);
                    LoadUpcomingTasks(data);
                }
            });
        }

        function LoadInitialTasksIssuedByMe(data) {
            console.log(data);
            const tasksByMe = $("#tasksByMe");

            $.each(data.taskIssuedByMe, function (_, task) {
                console.log(task);
                const rowHtml = `
                                        <tr>
                                            <td>
                                                <a class="text-heading font-semibold" href="#">
                                                    ${task.employeeName}
                                                </a>
                                            </td>
                                            <td>
                                                <a class="text-heading font-semibold" href="#">
                                                    ${task.issuerName}
                                                </a>
                                            </td>
                                            <td>
                                               ${task.dueDate.split('T')[0]}
                                            </td>
                                            <td>
                                                <a href="#" class="btn btn-sm btn-neutral" onclick="openViewTaskModal(${JSON.stringify(task)})">View</a>
                                            </td>
                                            <td>
                                                ${task.priority.priorityName}
                                            </td>
                                            <td>
                                                ${task.status.statusName}
                                            </td>
                                            <td class="text-end">
                                                <button type="button" class="btn btn-sm btn-square btn-neutral text-danger-hover" onclick="deleteTask('${task.id}')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    `;
                $("#taskByMe").append(rowHtml);
            });
        }

        $(document).ready(function () {
            LoadData();
            ChangeTaskIssuedByMePages();
            CompleteTask();
        })
    </script>
    }
