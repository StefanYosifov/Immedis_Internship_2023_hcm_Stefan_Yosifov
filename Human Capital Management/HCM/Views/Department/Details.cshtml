@model HCM.Models.ViewModels.Departments.DepartmentDetailsViewModel

@{
    ViewData["Title"] = "Department Details";
}

<div class="container-xxl">
    <div class="card d-flex justify-content-center align-items-center my-5">
    <h5 class="card-header-pills">Department Details</h5>
        <div class="card-body w-auto">
            <img src="@Model.DepartmentImageUrl" class="img-fluid" alt="Department Image">
        </div>
    </div>

    <div class="row">
        <div class="card">
            <div class="card-header d-flex align-items-center border-bottom">
                <span class="avatar text-bg-primary avatar-lg fs-5">
                    @if (Model.DepartmentName.Length > 3)
                    {
                        @Model.DepartmentName.Substring(0, 3)
                    }
                    else
                    {
                        @Model.DepartmentName
                    }
                </span>
                <div class="ms-3">
                    <h6 class="mb-0 fs-sm">@Model.DepartmentName</h6>
                    <span class="text-muted fs-sm">@Model.CountryName</span>
                </div>
                <button class="btn text-muted ms-auto" data-toggle="modal" data-target="#myModal" type="btn">
                    <i class="fas fa-ellipsis-v"></i>
                </button>
            </div>
            <div class="card-body">
                <h6 class="mb-2">
                    <small><strong>ID:</strong> @Model.DepartmentId</small>
                </h6>
                <h6 class="mb-2">
                    <small><strong>Average Salary:</strong> @Model.AverageSalary</small>
                </h6>
                <h6 class="mb-2">
                    <small><strong>Employee Count:</strong> @Model.EmployeesCount</small>
                </h6>
                <h6 class="mb-2">
                    <small><strong>Total Positions:</strong> @Model.EmployeeCapacity</small>
                </h6>
            </div>

        </div>

        <div class="row">
        <div id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" class="modal fade text-left">
            <div role="document" class="modal-dialog modal-dialog-centered modal-lg ms-lg-5">
                <div class="modal-content">
                        <div class="modal-header row d-flex justify-content-between mx-1 mx-sm-3 mb-0 pb-5 border-0">
                            <div class="tabs" id="tab01">
                                <h6 class="text-muted">Positions</h6>
                            </div>
                            <div class="tabs" id="tab03">
                                <h6 class="text-muted">Add Employees</h6>
                            </div>
                            <div class="tabs" id="tab04">
                                <h6 class="text-muted">Edit</h6>
                            </div>
                        </div>
                        <div class="line"></div>
                        <div class="modal-body p-0">
                            <fieldset id="tab011">
                                <div class="bg-light px-3">
                                    <h5 class="text-center mb-4 mt-0 pt-4">My Apps</h5>
                                    <ol class="list-group list-group-numbered">
                                        @foreach (var position in Model.PositionsInDepartment)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                                <div class="ms-2 me-auto">
                                                    <div>@position.PositionName</div>
                                                    <p class="mb-0 fs-6 text-muted">
                                                        <strong>Id: </strong>
                                                        <span>@position.PositionId</span>
                                                        <i class="fa-solid fa-trash me-3" style="position: absolute; right: 0; cursor: pointer;"></i>
                                                    </p>
                                                </div>
                                                <span class="badge bg-primary">@position.EmployeesWithPositionCount</span>
                                            </li>
                                        }
                                    </ol>
                                </div>
                                <div class="px-3">
                                    <h6 class="pt-3 pb-3 mb-4 border-bottom"><span class="fa fa-android"></span> Available positions to add to the department</h6>
                                    @foreach (var position in Model.AvailablePositionsCollection)
                                    {
                                        <div class="row">
                                            <div class="col-md-10">
                                                <h6 class="text-primary pb-2">
                                                    <a href="">@position.Name</a> <span class="text-secondary">- Available for @Model.DepartmentName</span>
                                                </h6>
                                            </div>
                                            <div class="col-md-2">
                                                <h6 class="text-primary pb-2">
                                                    <a class="add-icon" data-position-id="@position.Id" href="#">
                                                        <i class="fa-solid fa-plus pointer-event"></i>
                                                    </a>
                                                </h6>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </fieldset>
                            <fieldset id="tab031">
                                <div class="bg-light align-content-center align-items-center">
                                    <h5 class="text-center mb-4 mt-0 pt-4">Add Employees</h5>
                                    <div class="d-flex justify-content-center">
                                        <form id="employeeForm" class="mb-4 mt-0 pt-4">
                                            <div class="custom-select">
                                                <input type="text" id="custom-select-input" placeholder="Select an option">
                                                <ul class="custom-select-options">
                                                </ul>
                                            </div>
                                            <div class="card shadow mb-4 mt-5">
                                                <div class="card-header py-3">
                                                    <h6 class="m-0 font-weight-bold text-primary" id="employeeFullName">Click on the dropdown to select an employee</h6>
                                                </div>
                                                <div class="card-body">
                                                    <p id="employeeDetails"></p>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset id="tab041">
                                <div class="bg-light">
                                    <h5 class="text-center mb-4 mt-0 pt-4">Details</h5>
                                    <form id="detailsEdit" class="m-5 p-5">
                                        <div class="form-group">
                                            <div class="property">
                                                <label for="Name">Department Name</label>
                                                <input value="@Model.DepartmentName" type="text" name="Name" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="property">
                                                <label for="MaxPeopleCount">Employee Capacity</label>
                                                <input value="@Model.EmployeeCapacity" type="number" name="MaxPeopleCount" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="property">
                                                <label for="ImageURL">Department Image URL</label>
                                                <input value="@Model.DepartmentImageUrl" type="text" name="ImageURL" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="property">
                                                <label for="CountryId">Country Name</label>
                                                <select name="CountryId" class="form-control">
                                                    @foreach (var country in Model.Countries)
                                                    {
                                                        <option value="@country.Id">@country.Name</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h2>Department Employees</h2>
    <div class="card shadow mb-4 mt-5 me-5">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Employees</h6>
        </div>
        <table class="table px-2">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Age</th>
                    <th>Nationality</th>
                    <th>Gender</th>
                    <th>Position</th>
                    <th>Seniority</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            @if (Model.DepartmentEmployees != null)
            {
                foreach (var employee in Model.DepartmentEmployees)
                {
                    <tr>
                        <td>@employee.EmployeeFullName</td>
                        <td>@employee.EmployeeAge</td>
                        <td>@employee.EmployeeNationalityISO</td>
                        <td>@employee.EmployeeGender</td>
                        <td>@employee.EmployeePosition</td>
                        <td>@employee.EmployeeSeniority</td>
                        <td>
                            <button class="btn-primary edit-button">Edit</button>
                        </td>
                        <td>
                            <button class="btn-primary  delete-button" value="@employee.EmployeeId">Delete</button>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>

<style>

