        color: #252525;
        overflow-x: hidden;
        height: 100%;
        background-color: #f8f9fc;
        background-repeat: no-repeat;
    }


    .custom-select {
        position: relative;
        display: inline-block;
        width: 200px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    #custom-select-input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
